            "format": "double"
          },
          "totalValue": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "OrderCreaterRequest": {
        "required": [
          "itemDescription",
          "itemPrice",
          "itemQuantity",
          "userId"
        ],
        "type": "object",
        "properties": {
          "userId": {
            "type": "string"
          },
          "itemDescription": {
            "type": "string"
          },
          "itemQuantity": {
            "type": "integer",
            "format": "int32"
          },
          "itemPrice": {
            "minimum": 0.01,
            "exclusiveMinimum": false,
            "type": "number",
            "format": "double"
          }
        }
      }
    }
